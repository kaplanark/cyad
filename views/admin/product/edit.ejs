
<%- include ("../../admin/partials/header.ejs") %>
<div class="container mt-4">
    <form action="/updateproduct" class="was-validated" method="POST" enctype="multipart/form-data">
        <input type="text" class="form-control mb-3" id="id" value="<%= found._id%>" hidden name="id">
        <div class="form-group">
            <label for="producttitle">Ürün İsmi</label>
            <input type="text" class="form-control is-invalid" id="producttitle" required name="title" value="<%= found.title %>">
        </div>
        <div class="form-group mt-3">
            <label for="productdescription">Ürün Açıklaması</label>
            <textarea class="form-control is-invalid" id="productdescription" required name="description"><%= found.description%></textarea>
        </div>
        <div class="form-group mt-3 mb-4">
            <label for="productimage">Ürün Resmi</label>
            <input type="file" class="form-control is-invalid" id="productimage" required accept="image/*" name="image">
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mt-3 mb-4">
                    <label for="totalAmount">Toplam Tutar</label>
                    <input type="number" class="form-control is-invalid" id="totalAmount" required name="totalAmount" value="<%= found.totalAmount %>">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mt-3 mb-4">
                    <label for="productdate">Yayın Tarihi</label>
                    <input type="date" class="form-control is-invalid" id="productdate" required name="date" value="<%= found.date %>">
                </div>
            </div>
        </div>
        <div class="mt-3 text-center">
            <button type="submit" class="btn btn-secondary btn-sm">Ürünü Güncelle</button>
            <a href="/admin/allproducts" class="btn btn-outline-secondary btn-sm">İptal</a>
        </div>
    </form>
</div>

<%- include ("../../admin/partials/alerts.ejs") %>
<%- include ("../../admin/partials/footer.ejs") %>