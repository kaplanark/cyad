<%- include ("../../admin/partials/header.ejs") %>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <ul class="list-group mt-3">
                    <% found.forEach((call,i)=>{ %>
                    <li class="list-group-item border-bottom p-0 pb-1 pt-3">
                        <p>
                            <a class="btn" data-bs-toggle="collapse" href="#collapseExample<%= i %>" role="button" aria-expanded="false" aria-controls="collapseExample<%= i %>">
                                <span class="fw-bold fs-8"><%= call.name %></span>
                                <small class="text-secondary fst-italic fs-8"><%= call.email %></small>
                            </a>
                          </p>
                          <div class="collapse" id="collapseExample<%= i %>">
                            <div class="card p-0 m-0 border-0">
                                <div class="card-header bg-transparent border-0 py-0">
                                    <span class="fw-bold fs-8">Konu: </span><%= call.subject %>
                                </div>
                                <div class="card-body py-0">
                                    <span class="fw-bold fs-8">Mesaj: </span><%= call.message %>
                                </div>
                                <div class="card-footer bg-transparent border-0">
                                <a href="/deletemail/<%= call._id %>" class="btn btn-danger btn-small fs-8"><i class="bi bi-trash"></i><span>Sil</span></a>
                                </div>
                            </div>
                          </div>
                    </li>
                    <% }); %>
                  </ul>
            </div>
        </div>
    </div>
<%- include ("../../admin/partials/alerts.ejs") %>
<%- include ("../../admin/partials/footer.ejs") %>